name: Daily Crypto Notify

on:
  workflow_dispatch:
  schedule:
    - cron: '0 23 * * *'

jobs:
  notify:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-python@v4
        with:
          python-version: '3.10'
      - run: pip install requests beautifulsoup4
      - run: python main.py
